#!/bin/sh
set -e

# Verwijder foute security regel (bookworm/updates) en zet de juiste
if [ -f /etc/apt/sources.list ]; then
  sed -i '/security.debian.org.*bookworm\/updates/d' /etc/apt/sources.list
fi

# Voeg juiste repo toe als die er nog niet is
if ! grep -q "bookworm-security" /etc/apt/sources.list; then
  echo "deb http://deb.debian.org/debian-security bookworm-security main contrib non-free non-free-firmware" >> /etc/apt/sources.list
fi
